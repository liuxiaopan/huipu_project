.taskSearch .search-box {
    padding-top: 25px;
}

.taskSearch .nova-content .col-md {
    float: left;
    width: 20%;
    height: auto;
    overflow: scroll;
}

.taskSearch .col-mdd {
    float: left;
    width: 100%;
    margin-left: 2%;
    padding-left: 2%;
    padding-bottom: 1%;
    border-bottom: 1px solid #428bca;
}

.taskSearch .col-md-ctrl {
    width: 20%;
    float: left;
    padding-left: 3%;
}

.taskSearch .nova-search-ctrl .col-md-ctrl {
    width: 30%;
}

.taskSearch .nova-search-ctrl .form-control.nova-doc {
    height: 35px;
    font-size: 12px;
    padding: 6px 4px;
}

.taskSearch .nova-dropmenu-box {
    width: 80%;
}

.taskSearch .nova-dropmenu-box .btn-group {
    width: 100%;
}

.taskSearch .nova-dropmenu-box .btn-group .btn-act {
    width: 85%;
}

.taskSearch .nova-dropmenu-box .btn-group .btn-menu {
    width: 15%;
}

.taskSearch .nova-search-ctrl .form-control {
    width: 80%;
}

.taskSearch .nova-content {
    height: 100%;
    overflow: hidden;
}

.taskSearch .nova-result {
    padding-top: 20px;
    border: none;
    width: 96%;
}

.taskSearch .nova-result .table > tbody > tr > td {
    padding: 3px;
    font-size: 12px;
}

.taskSearch .nova-ctr-paging {
    margin-left: -3%;
    border-top: 1px solid #428bca;
}

.taskSearch .nova-ctr-paging .pagination {
    float: right;
}

.taskSearch .nova-search-btn-box {
    text-align: center;
    margin-top: 21px;
}

.taskSearch .nova-task-create-btn-container {
    padding-bottom: 15px;
    text-align: right;
}

.taskSearch .nova-plan-create-btn-container label {
    font-size: 12px;
}

.taskSearch .nova-search-ctrl .col-md-ctrl label {
    font-size: 12px;
}

.taskSearch .nova-pagination {
    text-align: right;
}