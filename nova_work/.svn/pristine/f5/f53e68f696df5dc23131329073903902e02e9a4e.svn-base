nova-splitter, 
nova-splitter>nova-splitter-panes, 
nova-splitter>nova-splitter-panes>nova-splitter-pane, 
nova-splitter>nova-splitter-toggle{
  display: block;
}
nova-splitter,
nova-splitter>nova-splitter-panes>nova-splitter-pane, 
nova-splitter>nova-splitter-toggle{
  border-radius: 5px;
  border: 1px solid #598fe5;
}
nova-splitter{
  position: relative;
  width: 100%;
  min-height: 100px;
  background-color: #f9f9f9;
}
nova-splitter>nova-splitter-panes{
  width: 100%;
  height: 100%;
}
nova-splitter>nova-splitter-toggle,
nova-splitter>nova-splitter-panes>nova-splitter-pane{
  position: absolute;
}
nova-splitter>nova-splitter-panes>nova-splitter-pane{
  background-color: White;
  overflow: auto;
}

nova-splitter[orientation='vertical']>nova-splitter-panes>nova-splitter-pane{
  top: 5px;
  bottom: 5px;
}
nova-splitter[orientation='vertical']>nova-splitter-panes>nova-splitter-pane:first-child{
  left: 5px;
  width: 200px;
  transition: width 0.5s;
}
nova-splitter[orientation='vertical']>nova-splitter-panes>nova-splitter-pane:last-child{
  left: 210px;
  right: 5px;
  transition: left 0.5s;
}
nova-splitter[orientation='vertical']>nova-splitter-toggle{
  width: 12px;
  height: 80px;
  margin-top: -40px;
  line-height: 80px;
  left: 205px;
  top: 50%;
  border-radius: 0 5px 5px 0;
  font-weight: lighter;
  background-color: #f9f9f9;
  border-left: none;
  color: #598fe5;
  font-size: 12px;
  cursor: pointer;
  transition: left 0.5s;
}
